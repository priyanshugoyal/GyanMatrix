<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@color/background">


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="158dp"
        android:layout_height="250dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/placeholder"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="89dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Description"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <TextView
        android:id="@+id/country_view"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        tools:text="india"
        android:textSize="15sp"
        android:textColor="@color/text"

        android:gravity="center_horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/matches_view"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/matches_view"
        app:layout_constraintTop_toTopOf="@+id/image_view" />

    <TextView
        android:id="@+id/matches_view"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        tools:text="200"
        android:textColor="@color/text"

        android:gravity="center_horizontal"
        android:layout_marginEnd="44dp"
        android:textSize="15sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/runs_view"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="@+id/country_view" />

    <TextView
        android:id="@+id/runs_view"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        tools:text="3166"
        android:textSize="15sp"
        android:textColor="@color/text"

        android:gravity="center_horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/description_view"
        app:layout_constraintRight_toRightOf="@+id/matches_view"
        android:layout_marginTop="220dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="222dp"
        app:layout_constraintLeft_toLeftOf="@+id/matches_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="364dp"
        android:layout_height="63dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="Sachin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />
</android.support.constraint.ConstraintLayout>
